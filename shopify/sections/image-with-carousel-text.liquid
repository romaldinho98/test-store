<div class="carousel-text">
  <div class="carousel-text__container container">
    {% if section.settings.title != blank %}
      <h2 class="carousel-text__title"> {{ section.settings.title }} </h2>
    {% endif %}
    <div class="carousel-text__text-items">
      {% for block in section.blocks %}
        <div class="carousel-text__text-item text-item">
          {% if block.settings.title != blank %}
            <span class="text-item__title">{{ block.settings.title }}</span>
          {% endif %}
          {% if block.settings.text != blank %} 
            <div class="text-item__text">{{ block.settings.text }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    {% if section.settings.img != blank %}
      <div class="carousel-text__image">
        <img
          src="{{ section.settings.img | img_url: 'master' }}"
          alt="{{ section.settings.img.alt | escape }}"
          loading="lazy"
        >
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Image with carousel text",
    "settings": [
      {
        "type": "textarea",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "image_picker",
        "id": "img",
        "label": "Image"
      }
    ],
    "blocks": [
      {
        "type": "card",
        "name": "Text Card",
        "limit": 4,
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image with carousel text",
        "blocks": [
          {
            "type": "card"
          },
          {
            "type": "card"
          },
          {
            "type": "card"
          },
          {
            "type": "card"
          }
        ]
      }
    ]
  }
{% endschema %}
